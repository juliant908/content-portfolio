---
import SectionContainer from "../components/SectionContainer.astro";
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Stats from "../components/Stats.astro";
import Loader from "../components/Loader.astro";
import Footer from "../components/Footer.astro";
---

<Layout
	title="Julián Tibana | Creador de contenido gastronómico en la ciudad de Medellín, Antioquia."
>
	<main class="px-4 relative">
		<SectionContainer class="py-16 md:py-36">
			<Hero />
		</SectionContainer>
		<SectionContainer>
			<h2
				class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-[var(--accent)]"
			>
				Estadísticas generales
			</h2>
			<Stats	/>
		</SectionContainer>
		<Loader />
	</main>
	<Footer />
</Layout>

<style>
	main {
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		color: black;
	}

</style>

<script>
	document.body.style.overflow = 'hidden';
	window.addEventListener('DOMContentLoaded', () => {
		const loader = document.querySelector('.loader') as HTMLElement;
		setTimeout(() => {
			document.body.style.overflow = 'visible';
			loader.style.display = 'none';
		}, 750);
	});
</script>